{if $bon_markup_type == 'WebSite'}
    <script type="application/ld+json">
        {
            "@context": "http://schema.org",
            "@type": "WebSite",
            "url" : "{$bon_markup_url|escape:'htmlall':'UTF-8'}",
            "image": {
                "@type": "ImageObject",
                "url":"{$bon_markup_logo|escape:'htmlall':'UTF-8'}"
            },
            "potentialAction": {
                "@type": "SearchAction",
                "target": "{'--search_term_string--'|str_replace:'{search_term_string}':$link->getPageLink('search',true,null,['search_query'=>'--search_term_string--'])|escape:'htmlall':'UTF-8'}",
                "query-input": "required name=search_term_string"
            }
        }
    </script>
{/if}