class Module extends ModuleCore
{
    protected function getCacheId($name = null)
    {
        $cacheId = parent::getCacheId($name);
        if (isset($_SERVER['HTTP_ACCEPT']) && strpos($_SERVER['HTTP_ACCEPT'], 'image/webp') !== false) {
            $cacheId .= '|webp';
        }
        return $cacheId;
    }
}
