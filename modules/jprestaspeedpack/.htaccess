# Apache 2.2
<IfModule !mod_authz_core.c>
   <Files *.php>
       Order allow,deny
       Deny from all
   </Files>
   <Files webp.php>
       Allow from all
   </Files>
   <Files avif.php>
       Allow from all
   </Files>
</IfModule>

# Apache 2.4
<IfModule mod_authz_core.c>
   <Files *.php>
       Require all denied
   </Files>
   <Files webp.php>
       Require all granted
   </Files>
   <Files avif.php>
       Require all granted
   </Files>
</IfModule>
